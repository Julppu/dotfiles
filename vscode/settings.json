{
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "'Meslo LG M DZ for Powerline', Menlo, Monaco, 'Courier New', monospace",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.mouseWheelZoom": true,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "explorer.sortOrder": "type",
    "files.associations": {
        "**/*.xconf": "xml",
        "**/*.xmap": "xml",
        "**/*.xsp": "java",
        "**/*.yaml": "yaml",
        "**/*.yml": "ansible"
    },
    "files.autoGuessEncoding": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/__MACOSX/": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "*.iml": true,
        "*~": true,
        "*.swp": true,
        "**/build/": true,
        "**/node_modules/": true,
        "**/package/lib/": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "remote.WSL.fileWatcher.polling": true,
    "search.showLineNumbers": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.external.linuxExec": "xterm",
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.external.windowsExec": "C:\\Windows\\System32\\powershell.exe",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.macOptionIsMeta": true,
    "update.showReleaseNotes": false,
    "window.restoreWindows": "all",
    "window.zoomLevel": -1,
    "zenMode.hideLineNumbers": false,
    // plugins
    "git.enabled": true,
    "git.path": "C:\\Program Files\\Git\\bin\\git.exe",
    "gitlens.codeLens.enabled": false,
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
    "gitlens.defaultDateFormat": "YYYY-MM-DD HH:MM:ss",
    "go.buildOnSave": "package",
    "go.docsTool": "godoc",
    "go.formatTool": "goimports",
    "go.lintOnSave": "file",
    "go.lintTool": "staticcheck",
    "go.testOnSave": false,
    "go.toolsGopath": "C:\\Users\\juha.lindqvist\\go",
    "go.useLanguageServer": true,
    "go.vetOnSave": "package",
    "hadolint.hadolintPath": "%USERHOME%\\scoop\\shims\\hadolint.exe",
    "python.languageServer": "Jedi",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "shellformat.path": "%USERHOME%\\scoop\\shims\\shellcheck.exe",
    "terraform.languageServer": {
        "enabled": true,
        "args": [
            "serve"
        ]
    },
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // language preferences
    "[ansible]": {
        "editor.rulers": [
            160
        ]
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "exiasr.hadolint"
    },
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.formatOnSave": true,
        "editor.snippetSuggestions": "none",
    },
    "[go.mod]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
